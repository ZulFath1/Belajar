<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TransactionController">
   <top>
      <Label text="TRANSAKSI PENJUALAN BARU" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="10.0" top="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
         <children>
            <Label text="Pilih Pelanggan:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ComboBox fx:id="comboCustomer" prefWidth="300.0" promptText="Pilih Pelanggan" />
            
            <Label text="Pilih Barang (Stok Tersedia):">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TableView fx:id="tabelStok" prefHeight="250.0" prefWidth="200.0">
               <columns>
                  <TableColumn fx:id="stokKolomNama" prefWidth="150.0" text="Nama Barang" />
                  <TableColumn fx:id="stokKolomHarga" prefWidth="100.0" text="Harga Satuan" />
                  <TableColumn fx:id="stokKolomStok" prefWidth="70.0" text="Stok" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Kuantitas (Qty):" />
                  <TextField fx:id="inputKuantitas" prefWidth="80.0" promptText="1" />
                  <Button mnemonicParsing="false" onAction="#aksiTambahItem" text="Tambahkan ke Keranjang" />
               </children>
            </HBox>
            
            <Label text="Keranjang Belanja:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TableView fx:id="tabelKeranjang" prefHeight="200.0" prefWidth="200.0">
               <columns>
                  <TableColumn fx:id="keranjangKolomNama" prefWidth="150.0" text="Nama Barang" />
                  <TableColumn fx:id="keranjangKolomHarga" prefWidth="100.0" text="Harga Satuan" />
                  <TableColumn fx:id="keranjangKolomKuantitas" prefWidth="70.0" text="Qty" />
                  <TableColumn fx:id="keranjangKolomSubtotal" prefWidth="100.0" text="Subtotal" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </center>
   <bottom>
      <VBox spacing="10.0" BorderPane.alignment="CENTER_RIGHT">
         <padding>
            <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
         </padding>
         <children>
            <Label fx:id="labelTotal" text="TOTAL AKHIR: Rp 0.00">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#aksiSelesaikanTransaksi" text="Selesaikan Transaksi" />
                  <Button mnemonicParsing="false" onAction="#aksiKembali" text="&lt; Batal &amp; Kembali" />
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>