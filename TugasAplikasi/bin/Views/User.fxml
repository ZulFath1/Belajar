<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="350.0" prefWidth="450.0" spacing="20.0" 
      xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controllers.AccountController">
   
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   
   <children>
      <Label text="PENGATURAN AKUN AKTIF">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      
      <Label text="Username:" />
      <TextField fx:id="inputUsername" editable="false" promptText="Nama Pengguna" />
      
      <Label text="Password:" />
      <TextField fx:id="inputPassword" editable="false" promptText="Password" />
      
      <Button mnemonicParsing="false" onAction="#aksiKembali" prefWidth="150.0" text="&lt; Kembali ke Dashboard" />
   </children>
</VBox>