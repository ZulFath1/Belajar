<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="650.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CustomerController">
   <top>
      <Label text="KELOLA DATA PELANGGAN" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="10.0" top="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <TableView fx:id="tabelCustomers" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="kolomId" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="kolomNama" prefWidth="150.0" text="Nama Pelanggan" />
            <TableColumn fx:id="kolomEmail" prefWidth="200.0" text="Alamat" />
            <TableColumn fx:id="kolomTelepon" prefWidth="120.0" text="Telepon" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" />
         </BorderPane.margin>
      </TableView>
   </center>
   <bottom>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
         </padding>
         <children>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="inputNama" promptText="Nama Pelanggan" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="inputEmail" promptText="Alamat" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="inputTelepon" promptText="Telepon" prefWidth="150.0" />
               </children>
            </HBox>
            
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#aksiTambah" text="Tambah Baru" />
                  <Button mnemonicParsing="false" onAction="#aksiUpdate" text="Update Dipilih" />
                  <Button mnemonicParsing="false" onAction="#aksiHapus" text="Hapus Dipilih" />
                  
                  <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                     <children>
                        <Button mnemonicParsing="false" onAction="#aksiKembali" text="&lt; Kembali ke Dashboard" />
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>