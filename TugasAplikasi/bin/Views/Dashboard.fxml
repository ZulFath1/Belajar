<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DashboardController">
   
   <top>
      <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #ddd;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label text="DASHBOARD TOKO">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label fx:id="labelSapaan" text="Selamat Datang, [Nama User]!" />
         </children>
      </VBox>
   </top>

   <center>
      <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#aksiTampilkanUser" prefWidth="200.0" text="Pengaturan Akun" />
            <Button mnemonicParsing="false" onAction="#aksiTampilkanItems" prefWidth="200.0" text="Kelola Barang" />
            <Button mnemonicParsing="false" onAction="#aksiTampilkanCustomer" prefWidth="200.0" text="Kelola Pelanggan" />
            <Button mnemonicParsing="false" onAction="#aksiTampilkanTransaction" prefWidth="200.0" text="Transaksi Baru" />
            
            <Button mnemonicParsing="false" onAction="#aksiLogout" prefWidth="200.0" style="-fx-background-color: #ffcccc;" text="Logout / Keluar" textFill="RED">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
   
</BorderPane>